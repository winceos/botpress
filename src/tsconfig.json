{
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2019",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./bp",
    "outDir": "../out",
    "typeRoots": ["./typings", "../node_modules/@types", "./bp/common"],
    "types": ["reflect-metadata", "jest"]
  },
  "exclude": [
    "e2e/**",
    "**/*.__test__.(ts|js)",
    "../out",
    "**/node_modules/**/*.(ts|js)",
    "**/static/**/*.(js|ts)",
    "**/ui-shared/**/*",
    "bp/admin/ui/**/*",
    "bp/ui-lite/**/*",
    "bp/ui-studio/**"
  ]
}
